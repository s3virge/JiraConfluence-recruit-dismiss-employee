<Window x:Class="SeleniumGUI.SettingsWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeleniumGUI"
        mc:Ignorable="d"
        Title="Settings" 
        Height="179" Width="319" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="tbLogin" Margin="20,15,20,0" Height="21" VerticalAlignment="Top">
            <TextBox.ToolTip>Login for jira-confluence</TextBox.ToolTip>
        </TextBox>
        <PasswordBox x:Name="tbPassword" Margin="20,53,20,0" Height="21" VerticalAlignment="Top" ToolTip="Password" />
        <Button Content="OK" HorizontalAlignment="Left" Margin="141,95,0,0" VerticalAlignment="Top" Width="57" IsDefault="True" Height="30" Click="OK_Click"/>
        <Button Content="Not OK" HorizontalAlignment="Left" Margin="218,95,0,0" VerticalAlignment="Top" Width="54" IsCancel="True" Height="30"/>
    </Grid>
</Window>
